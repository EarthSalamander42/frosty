<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
		<include src="file://{resources}/styles/dotastyles.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/simple_panel_animation.js" /> 
	</scripts>

	<Panel class="AddonLoadingRoot">
		<Panel id="CustomBg">
			<Panel id="community_stuff_container" >
				<Panel id="show_community_panel_button" >
					<Label id="show_community_panel_button_label" html="true" text="#addonname" />
				</Panel>

				<Panel id="CommunityPanel">
					<Label id="community_description" class="CommunityText" html="true" text="#community_description" />
					<Label id="community_post_description_01" class="CommunityText" html="true" text="#community_post_description_01"/>

					<Button id="community_discord_header" class="CommunityImg" onactivate="DOTADisplayURL('https://discord.gg/CTzwmrx');" >
						<Image src="file://{images}/custom_game/loading_screen/community_discord_header.png" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="TitlePanel">
				<Image id="loading_screen_title" class="SeqImg" src="file://{images}/custom_game/loading_screen/loading_screen_title.jpg" />
			</Panel>
		</Panel>
	</Panel>
</root>
