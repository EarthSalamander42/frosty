<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/frostivus.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/frostivus.js" />
		<include src="file://{resources}/scripts/custom_game/Modular.js" />
	</scripts>

	<Panel class="Frostivus" hittest="false">
		<Panel id="FrostivusAltarRespawn">
			<Panel id="FrostivusAltarMenu">
				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton1" class="AltarButton" onactivate="ChooseAltar(1);">
						<Label text="#frostivus_altar_1" />
					</Button>
					<Panel id="AltarState1" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton2" class="AltarButton" onactivate="ChooseAltar(2);">
						<Label text="#frostivus_altar_2" />
					</Button>
					<Panel id="AltarState2" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton3" class="AltarButton" onactivate="ChooseAltar(3);">
						<Label text="#frostivus_altar_3" />
					</Button>
					<Panel id="AltarState3" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton4" class="AltarButton" onactivate="ChooseAltar(4);">
						<Label text="#frostivus_altar_4" />
					</Button>
					<Panel id="AltarState4" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton5" class="AltarButton" onactivate="ChooseAltar(5);">
						<Label text="#frostivus_altar_5" />
					</Button>
					<Panel id="AltarState5" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton6" class="AltarButton" onactivate="ChooseAltar(6);">
						<Label text="#frostivus_altar_6" />
					</Button>
					<Panel id="AltarState6" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton7" class="AltarButton" onactivate="ChooseAltar(7);">
						<Label text="#frostivus_altar_7" />
					</Button>
					<Panel id="AltarState7" class="AltarState"/>
				</Panel>
			</Panel>
		</Panel>

		<Panel class="Diretide" hittest="false">
			<Panel id="DiretidePanel">
				<Panel id="BossHP" hittest="false">
					<Label id="BossLabel" class="HoldoutLabelSmall" hittest="false" text=""/>
					<Label id="BossLevel" class="HoldoutLabelSmall_alt" hittest="false" text="Level: "/>
					<Panel id="BossProgressBarContainer" hittest="false">
						<DOTAHeroImage id="BossIcon" hittest="false"/>
						<ProgressBar id="BossProgressBar" hittest="false" value="1.0"/>
						<Label id="BossHealth" class="HoldoutLabelSmall" hittest="false" text=""/>
					</Panel>
				</Panel>
			</Panel>
		</Panel>

		<Panel id="FrostivusScorePanel">
			<Panel id="Frostivus">
				<Label id="PhaseLabel" text="#diretide_phase_1" onmouseover="FrostivusInfo()" onmouseout="UIHideTextTooltip()"/>
				<Label id="Timer" text="--:--"/>
			</Panel>
		</Panel>
	</Panel>
</root>
