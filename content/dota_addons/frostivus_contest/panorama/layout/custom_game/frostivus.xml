<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/frostivus.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/frostivus.js" />
		<include src="file://{resources}/scripts/custom_game/Modular.js" />
	</scripts>

	<Panel class="FrostivusHUD" hittest="false">
		<Panel id="FrostivusAltarRespawn">

			<Panel id="FrostivusAltar">
				<Button id="FrostivusAltarButton" onactivate="FrostivusAltar();">
					<Label text="#frostivus_altar_button" />
				</Button>
			</Panel>

			<Panel id="FrostivusAltarMenu">
				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton1" class="AltarButton" onactivate="ChooseAltar(1);">
						<Label text="#frostivus_altar_1" />
					</Button>
					<Panel id="AltarState1" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton2" class="AltarButton" onactivate="ChooseAltar(2);">
						<Label text="#frostivus_altar_2" />
					</Button>
					<Panel id="AltarState2" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton3" class="AltarButton" onactivate="ChooseAltar(3);">
						<Label text="#frostivus_altar_3" />
					</Button>
					<Panel id="AltarState3" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton4" class="AltarButton" onactivate="ChooseAltar(4);">
						<Label text="#frostivus_altar_4" />
					</Button>
					<Panel id="AltarState4" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton5" class="AltarButton" onactivate="ChooseAltar(5);">
						<Label text="#frostivus_altar_5" />
					</Button>
					<Panel id="AltarState5" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton6" class="AltarButton" onactivate="ChooseAltar(6);">
						<Label text="#frostivus_altar_6" />
					</Button>
					<Panel id="AltarState6" class="AltarState"/>
				</Panel>

				<Panel class="FrostivusAltarContent">
					<Button id="AltarButton7" class="AltarButton" onactivate="ChooseAltar(7);">
						<Label text="#frostivus_altar_7" />
					</Button>
					<Panel id="AltarState7" class="AltarState"/>
				</Panel>
			</Panel>
		</Panel>

		<Panel id="FrostivusHUD_alt" hittest="false">
			<Panel id="FrostivusPanelTimer">
				<Label id="PhaseLabel" text="#frostivus_phase_1" onmouseover="FrostivusInfo()" onmouseout="UIHideTextTooltip()"/>

				<Label id="Timer" text="--:--"/>
			</Panel>

			<Panel id="BossHP2" class="BossHP" hittest="false">
				<Panel id="BossInfo2" class="BossInfo" hittest="false">
					<Label id="BossLevel2" class="BossLevel" hittest="false" text="Level: "/>
					<Label id="BossLabel2" class="BossLabel" hittest="false" text=""/>
				</Panel>

				<Panel id="BossProgressBarContainer2" class="BossProgressBarContainer" hittest="false">
					<DOTAHeroImage id="BossIcon2" hittest="false"/>
					<ProgressBar id="BossProgressBar2" class="BossProgressBar" hittest="false" value="1.0"/>
					<Label id="BossHealth2" class="HoldoutLabelSmall" hittest="false" text=""/>
				</Panel>


				<Panel id="CastBars2" class="CastBars" hittest="false">
					<Panel id="BossCastBar2" class="BossCastBar" hittest="false">
						<DOTAAbilityImage id="BossCastAbility2" class="BossCastAbility" onmouseover="ShowAbilityTooltip(1)" onmouseout="HideAbilityTooltip()" abilityname="" />
						<Label id="BossCastAbilityName2" class="BossCastAbilityName" hittest="false" text="Lightning Bolt"/>
						<Label id="BossCastTimeLabel2" class="BossCastTimeLabel" hittest="false" text="0.0/1.0"/>
						<ProgressBar id="BossCastProgressBar2" class="BossCastProgressBar" hittest="false" value="1.0"/>
					</Panel>

					<Panel id="BossCastBar2_2" class="BossCastBar" hittest="false">
						<DOTAAbilityImage id="BossCastAbility2_2" class="BossCastAbility" onmouseover="ShowAbilityTooltip(1)" onmouseout="HideAbilityTooltip()" abilityname="" />
						<Label id="BossCastAbilityName2_2" class="BossCastAbilityName" hittest="false" text="Lightning Bolt"/>
						<Label id="BossCastTimeLabel2_2" class="BossCastTimeLabel" hittest="false" text="0.0/1.0"/>
						<ProgressBar id="BossCastProgressBar2_2" class="BossCastProgressBar" hittest="false" value="1.0"/>
					</Panel>
				</Panel>
			</Panel>
			<Panel id="BossHP3" class="BossHP" hittest="false">
				<Panel id="BossInfo3" class="BossInfo" hittest="false">
					<Label id="BossLevel3" class="BossLevel" hittest="false" text="Level: "/>
					<Label id="BossLabel3" class="BossLabel" hittest="false" text=""/>
				</Panel>

				<Panel id="BossProgressBarContainer3" class="BossProgressBarContainer" hittest="false">
					<DOTAHeroImage id="BossIcon3" class="BossIcon" hittest="false"/>
					<ProgressBar id="BossProgressBar3" class="BossProgressBar" hittest="false" value="1.0"/>
					<Label id="BossHealth3" class="BossHealth" hittest="false" text=""/>
				</Panel>

				<Panel id="BossCastBar3" class="BossCastBar" hittest="false">
					<DOTAAbilityImage id="BossCastAbility3" class="BossCastAbility" onmouseover="ShowAbilityTooltip(1)" onmouseout="HideAbilityTooltip()" abilityname="" />
					<Label id="BossCastAbilityName3" class="BossCastAbilityName" hittest="false" text="Lightning Bolt"/>
					<Label id="BossCastTimeLabel3" class="BossCastTimeLabel" hittest="false" text="0.0/1.0"/>
					<ProgressBar id="BossCastProgressBar3" class="BossCastProgressBar" hittest="false" value="1.0"/>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
